<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/view_padding"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_padding">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/item_text_font"
            android:textStyle="italic"
            android:text="12:34" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/time"
            android:textSize="@dimen/text_small_font"
            android:layout_marginTop="@dimen/view_padding"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="today" />

        <TextView
            android:id="@+id/name"
            android:textColor="@color/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_font"
            android:layout_toLeftOf="@id/time"
            android:layout_marginRight="@dimen/view_padding"
            android:lines="1"
            android:text="Name" />

        <TextView
            android:id="@+id/category"
            android:textColor="@color/textSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/time"
            android:layout_below="@id/name"
            android:textSize="@dimen/text_secondary_font"
            android:layout_marginTop="@dimen/view_padding"
            android:lines="1"
            android:text="Category" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
